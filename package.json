{
  "name": "validex",
  "version": "1.0.0",
  "description": "Validex: A modular, type-safe validation engine for TypeScript. Unified runtime, builder, decorator, and string rule support. First official release.",
  "author": "Junaid Ali Shah Gigli",
  "license": "MIT",
  "homepage": "https://github.com/jasgigli/validex#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jasgigli/validex.git"
  },
  "bugs": {
    "url": "https://github.com/jasgigli/validex/issues"
  },
  "keywords": [
    "validex",
    "validation",
    "validator",
    "typescript",
    "zod",
    "yup",
    "joi",
    "class-validator",
    "schema",
    "typesafe",
    "inference",
    "decorators",
    "nestjs",
    "trpc",
    "express",
    "react",
    "form",
    "chainable",
    "declarative",
    "isomorphic",
    "metamorphic"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "gigli": "./dist/cli/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && tsc -p tsconfig.cjs.json",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "prepublishOnly": "npm test && npm run build",
    "release": "npm run prepublishOnly && npm publish"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
